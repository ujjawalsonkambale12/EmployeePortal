@model EmployeePortalWeb.Models.Employee

@{
    ViewData["Title"] = "Edit Employee";
}


<nav class="navbar navbar-expand-lg navbar-light" style="background: linear-gradient(135deg, #8A2BE2, #E6A9FC);">
    <div class="container">
        <a class="navbar-brand d-flex align-items-center" href="@Url.Action("Index", "Home")">
            <img src="~/images/huly.png" alt="Logo" width="160" class="me-3 rounded-circle">
            <button class="btn btn-light px-5 py-2 rounded-pill shadow-lg hover-shadow">
                Home
            </button>
        </a>
    </div>
</nav>


<h1 class="text-center py-3" style="background: linear-gradient(135deg, #FFEB99, #FFFBCC); color: #6A4C8C; text-shadow: 2px 2px 8px rgba(0, 0, 0, 0.2); border-radius: 15px;">
    @ViewData["Title"]
</h1>

<h4 class="text-center text-muted mb-4">Update employee details below</h4>

<form asp-action="Edit" method="post" enctype="multipart/form-data" class="p-4 rounded shadow-sm" style="background: #f9f9f9; max-width: 600px; margin: 0 auto;">
    <div class="form-group mb-3">
        <label for="FirstName" class="form-label fw-bold">First Name</label>
        <input type="text" class="form-control" id="FirstName" name="FirstName" value="@Model.FirstName" required placeholder="Enter First Name" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label for="LastName" class="form-label fw-bold">Last Name</label>
        <input type="text" class="form-control" id="LastName" name="LastName" value="@Model.LastName" required placeholder="Enter Last Name" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label for="PDFDocument" class="form-label fw-bold">Upload PDF</label>
        <input type="file" class="form-control" id="PDFDocument" name="pdfFile" />
        @if (!string.IsNullOrEmpty(Model.PDFDocumentPath))
        {
            <p>Current PDF: <a href="@Url.Content("~/" + Model.PDFDocumentPath)" target="_blank">View PDF</a></p>
        }
        <span asp-validation-for="PDFDocumentPath" class="text-danger"></span>
    </div>

    <div class="form-group text-center">
        <button type="submit" class="btn btn-primary px-5 py-2 rounded-pill shadow-lg">Save Changes</button>
    </div>
</form>

<!-- Cancel Button -->
<div class="text-center mt-4">
    <a href="@Url.Action("Index", "Employee")" class="btn btn-outline-secondary px-5 py-2 rounded-pill">Cancel</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
