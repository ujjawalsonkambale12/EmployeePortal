@model EmployeePortalWeb.Models.Employee

@{
    ViewData["Title"] = "Delete Employee";
}

<!-- Navbar -->
<nav class="navbar navbar-expand-lg navbar-light" style="background: linear-gradient(135deg, #8A2BE2, #E6A9FC);">
    <div class="container">
        <a class="navbar-brand d-flex align-items-center" href="@Url.Action("Index", "Home")">
            <img src="~/images/huly.png" alt="Logo" width="160" class="me-3 rounded-circle">
            <button class="btn btn-light px-5 py-2 rounded-pill shadow-lg hover-shadow">
                Home
            </button>
        </a>
    </div>
</nav>


<div class="d-flex justify-content-center align-items-center my-4" style="background-color: #F8D7DA; color: #721C24; padding: 25px; border-radius: 15px; border: 1px solid #F5C6CB;">
    <div>
        <h3 class="mb-3">Warning! Are you sure you want to delete this employee?</h3>
    </div>
</div>

<div class="d-flex flex-column align-items-center my-4" style="border: 1px solid #FF6F61; padding: 20px; border-radius: 10px; background-color: #FFFBFB;">
    <h5 class="card-title mb-4" style="font-weight: bold; color: #FF6F61;">Employee Details</h5>
    <p><strong>Name:</strong> @Model.FirstName @Model.LastName</p>
    <p><strong>Date of Birth:</strong> @Model.DateOfBirth.ToShortDateString()</p>
    <p><strong>Email:</strong> @Model.Email</p>
</div>

<div class="d-flex justify-content-center gap-3">
    <form asp-action="Delete" method="post">

        <input type="hidden" name="id" value="@Model.Id" />

        <button type="submit" class="btn btn-danger px-5 py-2 rounded-pill shadow-lg">Yes, Delete</button>
    </form>

    <a href="@Url.Action("Index", "Employee")" class="btn btn-secondary px-5 py-2 rounded-pill shadow-lg">Cancel</a>
</div>

