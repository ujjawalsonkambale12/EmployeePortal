@{
    ViewData["Title"] = "Login";
}

<nav class="navbar navbar-expand-lg navbar-light" style="background: linear-gradient(135deg, #8A2BE2, #E6A9FC);">
    <div class="container">
        <a class="navbar-brand d-flex align-items-center" href="@Url.Action("Index", "Home")">
            <img src="~/images/huly.png" alt="Logo" width="160" class="me-3 rounded-circle">
            <button class="btn btn-light px-5 py-2 rounded-pill shadow-lg hover-shadow">
                Home
            </button>
        </a>
    </div>
</nav>

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2 class="text-center text-primary mb-4">Welcome Back</h2>
            <p class="text-center">Please login to your account</p>

            @if (ViewData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger" role="alert">
                    @ViewData["ErrorMessage"]
                </div>
            }

            <!-- Login Form -->
            <form asp-action="Login" method="post">
                <div class="form-group">
                    <label for="Username">Username</label>
                    <input type="text" class="form-control" id="Username" name="Username" required placeholder="Enter your username" />
                </div>
                <div class="form-group mt-3">
                    <label for="Password">Password</label>
                    <input type="password" class="form-control" id="Password" name="Password" required placeholder="Enter your password" />
                </div>
                <div class="form-check mt-3">
                    <input type="checkbox" class="form-check-input" id="RememberMe" name="RememberMe" />
                    <label class="form-check-label" for="RememberMe">Remember Me</label>
                </div>
                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-primary">Login</button>
                </div>
            </form>

            <div class="mt-3 text-center">
                <p>Don't have an account? <a href="@Url.Action("Register", "Account")">Register here</a></p>
            </div>
        </div>
    </div>
</div>

<!-- Add custom CSS -->
<style>
    .navbar {
        border-bottom: 2px solid #007bff;
    }

    .navbar-brand img {
        width: 40px;
        height: 40px;
    }

    .btn-outline-primary {
        border-radius: 30px;
        padding: 5px 20px;
        font-weight: bold;
    }

    .form-control {
        border-radius: 25px;
    }

    .form-check-label {
        font-size: 0.9em;
    }

    .alert-danger {
        margin-top: 20px;
    }

    .btn-primary {
        width: 100%;
        border-radius: 25px;
        padding: 10px;
    }
</style>
